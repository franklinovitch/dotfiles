#!/usr/bin/env bash

# ls aliases
alias ll='ls -alF'
alias la='ls -lA'
alias l='ls -CF'

# Cheatcode to avoid typo
alias cd..='cd ..'

# Change directory shortcuts
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'
alias ......='cd ../../../../..'

# Color grep output
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

# Enable aliases to be sudo'ed
alias sudo='sudo '
